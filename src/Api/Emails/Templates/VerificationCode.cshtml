@model Ecos.Api.Emails.Templates.Models.VerificationCodeViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #007bff;
        }

        p {
            margin-bottom: 15px;
        }

        .code-container {
            background-color: #e9ecef;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
        }

        .code {
            font-size: 1.5em;
            font-weight: bold;
            color: #28a745;
            letter-spacing: 5px;
        }

        .disclaimer {
            font-size: 0.9em;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Account Verification</h2>
        <p>To access apps and resources, please use the code below for account verification. <strong>The code will only work for 15 minutes.</strong></p>
        <div class="code-container">
            <p>Account verification code:</p>
            <p class="code">@Model.Code</p>
        </div>
        <p class="disclaimer">If you didn't request a code, you can ignore this email.</p>
    </div>
</body>
</html>