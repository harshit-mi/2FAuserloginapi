@model Ecos.Api.Emails.Templates.Models.ForgotPasswordViewModel
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Account Verification</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			line-height: 1.6;
			color: #333;
			margin: 0;
			padding: 0;
			background-color: #f4f4f4;
		}

		.container {
			max-width: 600px;
			margin: 30px auto;
			padding: 20px;
			background-color: #fff;
			border-radius: 8px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		}

		h2 {
			color: #007bff;
		}

		p {
			margin-bottom: 15px;
		}

        .code-container {
            background-color: #e9ecef;
            border-radius: 5px;
            text-align: center;
            overflow: auto;
        }

        .code {
            font-size: 0.5em;
            font-weight: bold;
            color: blue;
        }

		.disclaimer {
			font-size: 0.9em;
			color: #777;
		}
	</style>
</head>
<body>
	<div class="container">
		<h2>Password Reset Request</h2>
		<p>You have requested to reset your password. Please use the link below to set a new password. <strong>This link will expire in 15 minutes.</strong></p>
		<div class="code-container">
			<p>Reset Password Link:</p>
			<p class="code">@Model.ResetUrl</p>
		</div>
		<p class="disclaimer">If you did not request a password reset, please ignore this email.</p>
	</div>
</body>
</html>